<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<p>Pokemon:
	<%if @trainer.pokemons%>
		<%@trainer.pokemons.each do |pokemon| %>
		<br/>
			<%= pokemon.name %> is 
			level <%= pokemon.level %> and has <%= pokemon.health %> health left.
			<%= button_to "Damage!", damage_path(p_id: pokemon.id, t_id: @trainer), :class => "button small", :method => :patch %>
		<%end%>
	<%end%>
<% if @trainer === current_trainer%>
	<%= button_to "Create New Pokemon", '/pokemons/new', :class => "button small", :method => :get %>
<%end%>
</p>


